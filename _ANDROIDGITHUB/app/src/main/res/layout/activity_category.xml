<?xml version="1.0" encoding="utf-8"?>



<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Category"
    android:background="#57A6DD">

    <!--<activity android:name=".MyActivity"
        android:icon="@drawable/my_icon"
        android:label="Home" />-->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:paddingTop="24dp"

        android:paddingBottom="24dp"

       >

        <TextView
            android:id="@+id/searchbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"

            android:background="@android:color/darker_gray"

            android:paddingLeft="125dp"
            android:paddingTop="15dp"
            android:paddingRight="125dp"
            android:paddingBottom="15dp"

            android:text="Searchbar"


            />


        <TextView
            android:id="@+id/MostRecent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"

            android:layout_below="@id/searchbar"
            android:layout_alignLeft="@id/searchbar"


            android:text="Most Recent:\n(1 day ago)"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFF"

            android:layout_marginTop="16dp"

            />


        <Button
            android:id="@+id/mostRecentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/searchbar"
            android:layout_alignRight="@id/searchbar"
            android:layout_alignBottom="@id/MostRecent"

            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/MostRecent"

            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="425dp"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <Button
            android:layout_width="250dp"
            android:layout_height="71dp"
            android:background="#F79934"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="444dp"
            android:layout_marginBottom="16dp"

            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Sign In"

            android:drawableRight="@drawable/ic_sign_in"
            android:drawablePadding="-30dp"
            android:paddingRight="20dp"
            />




        <RelativeLayout
            android:clickable="true"
            android:layout_width="250dp"
            android:layout_height="71dp"
            android:background="#F79934"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="444dp"
            android:layout_marginBottom="16dp"
            >

            <TextView
                android:id="@+id/Register_TopText"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:text="Create Account"
                android:layout_marginBottom="40dp"


                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Share lists across devices"
                android:layout_below="@id/Register_TopText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-50dp"

                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/white"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/guest_sign_in_button"
            android:layout_width="250dp"
            android:layout_height="71dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="#F79934"
            android:clickable="true"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="444dp">

            <Button
                android:id="@+id/guest_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:alpha="0"

                />

            <TextView
                android:id="@+id/Guest_TopText"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginBottom="40dp"
                android:text="Sign in as Guest"
                android:textAlignment="center"


                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Guest_TopText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-50dp"
                android:text="Lists are limited to this device"
                android:textAlignment="center"

                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/white"></TextView>
        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>